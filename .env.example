# OpenGov Grants Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
OPENGRANTS_DEBUG=false
OPENGRANTS_LOG_LEVEL=INFO
OPENGRANTS_STRUCTURED_LOGGING=true

# Database Configuration
OPENGRANTS_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/opengovgrants
# For development with SQLite:
# OPENGRANTS_DATABASE_URL=sqlite+aiosqlite:///./data/opengovgrants.db

# AI/LLM Providers
OPENAI_API_KEY=your_openai_api_key_here
OPENGRANTS_OPENAI_MODEL=gpt-4
OPENGRANTS_OLLAMA_BASE_URL=http://localhost:11434
OPENGRANTS_OLLAMA_MODEL=llama2:7b

# Authentication & Security
OPENGRANTS_SECRET_KEY=your-secret-key-change-this-in-production
OPENGRANTS_JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
OPENGRANTS_JWT_ALGORITHM=HS256
OPENGRANTS_JWT_EXPIRE_MINUTES=30
OPENGRANTS_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
OPENGRANTS_API_V1_PREFIX=/api/v1
OPENGRANTS_RATE_LIMIT_PER_MINUTE=60
OPENGRANTS_MAX_REQUEST_SIZE_MB=10

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# External Services
S3_BUCKET_NAME=your-s3-bucket-name
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_GATEWAY=http://localhost:9091

# Development Settings
OPENGRANTS_HOST=0.0.0.0
OPENGRANTS_PORT=8000
OPENGRANTS_RELOAD=true

# Testing
OPENGRANTS_TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db
OPENGRANTS_TEST_REDIS_URL=redis://localhost:6379/1

# Feature Flags
OPENGRANTS_ENABLE_ANALYTICS=false
OPENGRANTS_ENABLE_AUDIT_LOG=true
OPENGRANTS_ENABLE_RATE_LIMITING=true